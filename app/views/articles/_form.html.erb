<%= form_for(@articles) do |f| %>
		<% @articles.errors.full_messages.each do |message| %>
			<div class="be-red white top-space">
				*<%= message %>
			</div>
		<%end%>
		<div class="fiel">
			<%= f.text_field :title, placeholder: "Título", class:"form-control" %>
		</div>
		<div class="field">
			Portada: <%= f.file_field :cover %>
		</div>
		<div class="field">
			<%= f.text_area :body	, placeholder: "Escribe aquí el artículo", style:"height:250px;", 	class:"form-control" %>
		</div>
		<div class="field">
			<label>Categorias:</label>
			<% @categories.each do |category|%>
			<div class="field">
				<%= check_box_tag "categories[]", category.id %> <%=category.name%>
			</div>
			
			<%end%>
		</div>
		<div class="field">
			<%= f.submit "Guardar", class:"btn be-red white"%>
		</div>
<%end%>