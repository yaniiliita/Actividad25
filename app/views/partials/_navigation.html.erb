<header>
		<nav class="be-red white large-padding">
			<ul class="no-list around-xs row center-xs middle-xs">
				<li class="col-md">
					<h1 class="no-margin" id="logo"><%= link_to "Blog Facilito", root_path %></h1>
				</li>
				<li class="col-md">
					<%= link_to "Artículos", articles_path%>
				</li>
				<% @categories.each do |category|%>
					<li class="col-md">
						<%= link_to category.name, category %>
					</li>
				<%end%>
				<% if user_signed_in? %>
					<li>
						<%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %>
					</li>
					<%else%>
					<li>
						<%= link_to "Iniciar sesión", new_user_session_path %>
					</li>
					<li>
						<%= link_to "Crear cuenta", new_user_registration_path %>
					</li>
				<% end %>
			</ul>
		</nav>
	</header>